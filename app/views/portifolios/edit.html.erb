<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Update a portifolio</h1>
      <%= simple_form_for @portifolio do |f| %>
        <%= f.input :title %>
        <%= f.input :link %>
        <%= f.input :photo, as: :file %>
        <%= f.button :submit, class: 'btn btn-primary w-100' %>
      <% end %>
    </div>
  </div>
</div>