<section class="banner js-scroll">
  <p>
    <span id="banner-typed-text"></span>
  </p>
  <div class="row justify-content-center py-5">
    <% unless user_signed_in? %>
    <%= link_to "CADASTRE-SE", new_user_registration_path,  class: "btn-principal"  %>
    <% else %>
    <% if current_user.role == "Project Owner" %>
    <%= link_to "GO TO DEVELOPERS", developers_path,  class: "btn-principal"  %>
    <% else %>
    <%= link_to "PROJECTS", projects_path,  class: "btn-principal"  %>
    <% end %>
    <% end %>
  </div>
</section>
