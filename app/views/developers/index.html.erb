<div class="container-fluid">
	<div class="row">
		<div class="col-lg-5 col-sm-12 p-0">
			<div id="map" style="width: 100%; height: 100vh; position: sticky" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
			</div>
		</div>
		<div class="col-lg-7 col-sm-12 p-0">
			<h1 class="text-center pt-3">Developers <%= current_user.role %></h1>
			<div class="row m-0">
				<% @developers.each do |developer| %>
					<div class="col-lg-6 col-sm-12">
						<div class="card-projetos my-1">
							<div class="card-description">
								<div class="d-flex justify-content-center">
									<div class="card-body">
										<p><%= developer.name %></p>
										<p><%= developer.role %></p>
										<p><%= developer.address %></p>
									</div>
								</div>
							</div>
							<div class="card-footer">

								
							</div>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>