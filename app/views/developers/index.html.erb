<div class="container-fluid">
    <div class="row">
        <div class="col-5 p-0">
            <div id="map" style="width: 100%; height: 600px;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
            </div>
        </div>
        <div class="col-7 p-0">
            <h1 class="text-center pt-3">Developers <%= current_user.role %></h1>
            <div class="row px-2">
                <% @developers.each do |developer| %>
                    <div class="col-4 py-2">
                        <div class="card-projetos ">
                            <div class="card-description">
                                <div class="d-flex justify-content-center">
                                    <div class="card-body">
                                        <p><%= developer.address %></p>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>